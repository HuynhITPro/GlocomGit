@using System.Data


<div class="container">
    <div class="row mb-1">
        <div style="width:250px">
            <div class="progress" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="height:10px;">
                <div class="progress-bar" style="width: 100%;font-size:9px;">100%</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div style="width: 250px">
            <div class="progress-stacked" style="height:10px;">
                <div class="progress" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%;height: 10px;">
                    <div class="progress-bar bg-success" style="font-size:9px;">
                        @((datarow==null)?"":datarow["SLTon"].ToString())
                    </div>
                </div>
                <div class="progress" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width:30%;height: 10px;">
                    <div class="progress-bar bg-danger" style="font-size:9px;">@((datarow == null) ? "" : datarow["SLTon"].ToString())</div>
                </div>

            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public  DataRowView datarow{ get; set; }
    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        Console.WriteLine(datarow[0]);
        return base.OnAfterRenderAsync(firstRender);
    }

}
