@using DevExpress.Blazor
@using static NFCWebBlazor.App_NguyenVatLieu.App_DuyetGia.Page_DuyetGiaMaster


<style>

</style>


<EditForm EditContext="@editContext" Context="EditFormContext" style="max-width:700px;">
    <DataAnnotationsValidator />
    <div class="d-flex justify-content-center">
        <DxFormLayout CssClass="sizelayout">
            <DxFormLayoutItem Caption="Người đề nghị*" ColSpanSm="12" ColSpanMd="4" ColSpanLg="4" CaptionPosition="CaptionPosition.Vertical">
                <Template>
                    <DxComboBox Data=@lstnguoidenghi CssClass="cw-480"
                                SearchFilterCondition="ListSearchFilterCondition.Contains"
                                ListRenderMode=ListRenderMode.Virtual
                                SearchTextParseMode=ListSearchTextParseMode.GroupWordsByAnd
                                SearchMode="ListSearchMode.AutoSearch"
                                TextFieldName="@nameof(Users.TenUser)"
                                ValueFieldName="@nameof(Users.TenUser)"
                                ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                @bind-Value=@NguoiDeNghiSelected />

                    <div class="text-danger">
                        <ValidationMessage For="@(() => nvlDuyetGiaShowcrr.NguoiDN)" />
                    </div>
                </Template>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Phòng ban*" ColSpanSm="12" ColSpanMd="4" ColSpanLg="4" CaptionPosition="CaptionPosition.Vertical">
                <Template>
                    <NFCWebBlazor.App_ClassDefine.ComboboxFilteredString CssClass="cw-480"
                                                                         TypeName="NVLPhongBan"
                                                                         SearchFilterCondition="ListSearchFilterCondition.Contains"
                                                                         ListRenderMode=ListRenderMode.Virtual
                                                                         SearchTextParseMode=ListSearchTextParseMode.GroupWordsByAnd
                                                                         SearchMode="ListSearchMode.AutoSearch"
                                                                         TextFieldName="@nameof(DataDropDownList.FullName)"
                                                                         ValueFieldName="@nameof(DataDropDownList.Name)"
                                                                         ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                                                         @bind-Value=@nvlDuyetGiaShowcrr.PhongBan />

                    <div class="text-danger">
                        <ValidationMessage For="@(() => nvlDuyetGiaShowcrr.PhongBan)" />
                    </div>
                </Template>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Lý do*" ColSpanSm="12" ColSpanMd="4" ColSpanLg="4" CaptionPosition="CaptionPosition.Vertical">
                <Template>
                    <NFCWebBlazor.App_ClassDefine.ComboboxFilteredString CssClass="cw-480"
                                                                         TypeName="NVLLyDoDuyetGia"
                                                                         SearchFilterCondition="ListSearchFilterCondition.Contains"
                                                                         ListRenderMode=ListRenderMode.Virtual
                                                                         SearchTextParseMode=ListSearchTextParseMode.GroupWordsByAnd
                                                                         SearchMode="ListSearchMode.AutoSearch"
                                                                         TextFieldName="@nameof(DataDropDownList.FullName)"
                                                                         ValueFieldName="@nameof(DataDropDownList.Name)"
                                                                         ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                                                         @bind-Value=@nvlDuyetGiaShowcrr.LyDo />

                    <div class="text-danger">
                        <ValidationMessage For="@(() => nvlDuyetGiaShowcrr.LyDo)" />
                    </div>
                </Template>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Nhóm vật tư*" ColSpanSm="6" ColSpanMd="4" ColSpanLg="4" CaptionPosition="CaptionPosition.Vertical">
                <Template>
                    <NFCWebBlazor.App_ClassDefine.ComboboxFilteredString CssClass="cw-480"
                                                                         SearchFilterCondition="ListSearchFilterCondition.Contains"
                                                                         ListRenderMode=ListRenderMode.Virtual
                                                                         SearchTextParseMode=ListSearchTextParseMode.GroupWordsByAnd
                                                                         SearchMode="ListSearchMode.AutoSearch"
                                                                         TypeName="NVL_LoaiDuyetGia"
                                                                         TextFieldName="@nameof(DataDropDownList.FullName)"
                                                                         ValueFieldName="@nameof(DataDropDownList.FullName)"
                                                                         ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                                                         @bind-Value="@nvlDuyetGiaShowcrr.LoaiDuyetGia" />
                    <div class="text-danger">
                        <ValidationMessage For="@(() =>nvlDuyetGiaShowcrr.LoaiDuyetGia)" />
                    </div>
                </Template>
            </DxFormLayoutItem>

           

            <DxFormLayoutItem Caption="Ngày đề nghị*" ColSpanSm="6" ColSpanMd="4" ColSpanLg="4" CaptionPosition="CaptionPosition.Vertical">

                <DxDateEdit @bind-Date="@nvlDuyetGiaShowcrr.Ngay" Mask="@DateTimeMask.ShortDate" DisplayFormat="dd-MM-yy" />
                <div class="text-danger">
                    <ValidationMessage For="@(() => @nvlDuyetGiaShowcrr.Ngay)" />
                </div>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Đơn vị thanh toán*" ColSpanSm="6" ColSpanMd="4" ColSpanLg="4" CaptionPosition="CaptionPosition.Vertical">
                <Template>
                    <NFCWebBlazor.App_ClassDefine.ComboboxFilteredString CssClass="cw-480"
                                                                         SearchFilterCondition="ListSearchFilterCondition.Contains"
                                                                         ListRenderMode=ListRenderMode.Virtual
                                                                         SearchTextParseMode=ListSearchTextParseMode.GroupWordsByAnd
                                                                         SearchMode="ListSearchMode.AutoSearch"
                                                                         TypeName="DonViTien"
                                                                         TextFieldName="@nameof(DataDropDownList.FullName)"
                                                                         ValueFieldName="@nameof(DataDropDownList.Name)"
                                                                         ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                                                         @bind-Value="@nvlDuyetGiaShowcrr.DVT" />
                    <div class="text-danger">
                        <ValidationMessage For="@(() =>nvlDuyetGiaShowcrr.DVT)" />
                    </div>
                </Template>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Cước vận chuyển*" ColSpanSm="6" ColSpanMd="4" ColSpanLg="4" CaptionPosition="CaptionPosition.Vertical">
                <Template>
                    <NFCWebBlazor.App_ClassDefine.ComboboxFilteredString CssClass="cw-480"
                                                                         SearchFilterCondition="ListSearchFilterCondition.Contains"
                                                                         ListRenderMode=ListRenderMode.Virtual
                                                                         SearchTextParseMode=ListSearchTextParseMode.GroupWordsByAnd
                                                                         SearchMode="ListSearchMode.AutoSearch"
                                                                         TypeName="CuocVanChuyen"
                                                                         TextFieldName="@nameof(DataDropDownList.FullName)"
                                                                         ValueFieldName="@nameof(DataDropDownList.Name)"
                                                                         ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                                                         @bind-Value="@nvlDuyetGiaShowcrr.CuocVanChuyen" />
                    <div class="text-danger">
                        <ValidationMessage For="@(() =>nvlDuyetGiaShowcrr.CuocVanChuyen)" />
                    </div>
                </Template>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Thuế GTGT*" ColSpanSm="6" ColSpanMd="4" ColSpanLg="4" CaptionPosition="CaptionPosition.Vertical">
                <Template>
                    <NFCWebBlazor.App_ClassDefine.ComboboxFilteredString CssClass="cw-480"
                                                                         SearchFilterCondition="ListSearchFilterCondition.Contains"
                                                                         ListRenderMode=ListRenderMode.Virtual
                                                                         SearchTextParseMode=ListSearchTextParseMode.GroupWordsByAnd
                                                                         SearchMode="ListSearchMode.AutoSearch"
                                                                         TypeName="ThueGTGT"
                                                                         TextFieldName="@nameof(DataDropDownList.FullName)"
                                                                         ValueFieldName="@nameof(DataDropDownList.Name)"
                                                                         ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
                                                                         @bind-Value="@nvlDuyetGiaShowcrr.ThueGTGT" />
                    <div class="text-danger">
                        <ValidationMessage For="@(() =>nvlDuyetGiaShowcrr.ThueGTGT)" />
                    </div>
                </Template>
            </DxFormLayoutItem>
            <DxFormLayoutItem Caption="Ghi chú" ColSpanSm="12" ColSpanMd="12" ColSpanLg="12" CaptionPosition="CaptionPosition.Vertical">

                <DxMemo @bind-Text=@nvlDuyetGiaShowcrr.GhiChu></DxMemo>

            </DxFormLayoutItem>

            <DxFormLayoutItem ColSpanSm="12" ColSpanMd="12">
                <div class="d-flex justify-content-center mt-2 gap-2">
                    <DxButton RenderStyle="ButtonRenderStyle.Primary" IconCssClass="bi bi-floppy" Text="Lưu" Visible=@(!EnableEdit) Click="@saveAsync" />
                    <DxButton RenderStyle="ButtonRenderStyle.Success" IconCssClass="bi bi-file-earmark m-1" Text="Làm lại" Visible=@(!EnableEdit) Click="@reset" />
                    <DxButton RenderStyle="ButtonRenderStyle.Info" IconCssClass="bi bi-pencil" CssClass="ms-2" Text="Sửa" Visible=@EnableEdit Click="@updateAsync" />
                </div>

            </DxFormLayoutItem>

        </DxFormLayout>
    </div>
</EditForm>

@code {
    [Parameter]
    public string title { get; set; }
    [Parameter]
    public NvlDuyetGiaShow nvlDuyetGiaShowcrr { get; set; }
    [Parameter]
    public EventCallback<NvlDuyetGiaShow> AfterEdit { get; set; }
    private EditContext? editContext;
    List<DataDropDownList> lstnhacungcap { get; set; }

    
    DataDropDownList nhacungcapselected { get; set; }
    DateTime? dtpngaydenghi { get; set; } = DateTime.Now;
    DateTime? dtpngaymax { get; set; }
    List<Users> lstnguoidenghi { get; set; }
    Users? NguoiDeNghiSelected { get; set; }
    string NoiDung { get; set; } = "";
    bool IsOpenfly;
    string GhiChu { get; set; } = "";

    bool checkvat = true;
    string noidungghichu = "Lập dự trù: " + Environment.NewLine + "Đơn vị thực hiện: P. Vật tư" + Environment.NewLine + "Thời gian hoàn thành: ";
    bool EnableEdit { get; set; } = false;

    DxFlyout dxFlyoutchucnang { get; set; }



}
