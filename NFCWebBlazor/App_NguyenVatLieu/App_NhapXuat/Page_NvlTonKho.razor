                                            <DxGridDataColumn FieldName="TTXuat" Caption="TT Xuất" Width="90" DisplayFormat="#,0.##;-#,0.##;#" />
                                        </Columns>
                                    </DxGridBandColumn>
                                    <DxGridBandColumn Caption="Tồn cuối kỳ">
                                        <Columns>
