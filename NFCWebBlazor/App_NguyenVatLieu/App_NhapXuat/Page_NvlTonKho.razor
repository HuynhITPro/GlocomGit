@using BlazorBootstrap
@using DevExpress.Blazor;
@using DevExpress.Data.Filtering
@using NFCWebBlazor.App_ClassDefine;
@using System.Data
@using static NFCWebBlazor.App_NguyenVatLieu.App_NhapXuat.Page_NhapXuat_Master
<style>
    .my-grid {
    height: @heightgrid;
    }

    

   

   

