                                        <Columns>
                                            <DxGridDataColumn FieldName="QuyDoiRaVi" Caption="Rã vỉ" Width="110" DisplayFormat="#,0.##;-#,0.##;#">
                                                <HeaderCaptionTemplate>
                                                    <span></span>
                                                </HeaderCaptionTemplate>
                                            </DxGridDataColumn>
                                            <DxGridDataColumn FieldName="TonCuoiRaVi" Caption="Tồn cuối (rã vỉ)" Width="110" DisplayFormat="#,0.##;-#,0.##;#">
                                                <HeaderCaptionTemplate>
