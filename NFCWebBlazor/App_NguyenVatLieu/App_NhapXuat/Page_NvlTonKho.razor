                                    <DxGridDataColumn FieldName="DVT" Caption="ĐVT" Width="80" />
                                    <DxGridDataColumn FieldName="DonGia" Caption="Đơn giá" Width="80" DisplayFormat="#,0.##;-#,0.##;''" />
                                    <DxGridDataColumn FieldName="TenNhom" Width="140" Caption="Nhóm hàng" />
