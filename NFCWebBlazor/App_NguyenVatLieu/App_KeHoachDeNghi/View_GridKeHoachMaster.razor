    DialogMsg dialogMsg;
    MsgBox msgBox;
    bool IsOpenfly { get; set; } = false;
    string img { get; set; } = IconImg.CheckMark;
    private async void btclickshowmodel()
    {
        bool bl = await dialogMsg.Show("Header test", "Body test");
        if (bl)
        {
            Console.WriteLine("Nó true rồi");
        }
